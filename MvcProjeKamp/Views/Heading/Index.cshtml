@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string color = "";
}

<h4>Başlıklar</h4>
<hr />
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Başlık Adı
                        </th>
                        <th style="width: 30%">
                            Oluşturan Yazar
                        </th>
                        <th style="width: 8%" class="text-center">
                            Kategori
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ID
                            </td>
                            <td>
                                <a>
                                    @item.HeadingName
                                </a>
                                <br />
                                <small>
                                    Oluşturma: @item.AddingDate.ToShortDateString()
                                </small>
                            </td>
                            <td>
                                <img alt="Avatar" class="img-circle img-md" src="@item.Writer.WriterImage">&nbsp;&nbsp;
                                <a>@(item.Writer.WriterName+" "+item.Writer.WriterSurname)</a>
                            </td>
                            <td class="project-state">
                                @switch (item.Category.CategoryName)
                                        {
                                            case "Dizi":
                                                color = "badge badge-success";
                                                break;
                                            case "Film":
                                                color = "badge badge-primary";
                                                break;
                                            default:
                                        color = "badge badge-dark";
                                        break;
                                        }
                                <span class="@color">
                                    @item.Category.CategoryName
                                </span>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="#">
                                    <i class="fas fa-folder">
                                    </i>
                                    İçerikler
                                </a>
                                <a class="btn btn-info btn-sm" href="#">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="#">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>

