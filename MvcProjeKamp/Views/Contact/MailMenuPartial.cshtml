<div class="col-md-3">
    <a href="/Message/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj</a>
    <div class="card">
        <div class="card-header" style="cursor:pointer" data-card-widget="collapse">
            <h3 class="card-title">Klasörler</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool">
                    <i class="fas fa-chevron-down"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item active">
                    <a href="/Contact/Index" class="nav-link">
                        <i class="fas fa-mail-bulk"></i> İletişim
                        <span class="badge bg-primary float-right">@ViewBag.iletisim</span>
                    </a>
                </li>
                <li class="nav-item active">
                    <a href="/Message/Inbox/" class="nav-link">
                        <i class="fas fa-inbox"></i> Gelen Kutusu
                        <span class="badge bg-primary float-right">@ViewBag.okunmamis / @ViewBag.gelenKutusu</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Message/Sendbox/" class="nav-link">
                        <i class="far fa-envelope"></i> Gönderilmiş
                        <span class="badge bg-primary float-right">@ViewBag.gonderilmis</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-file-alt"></i> Taslak
                    </a>
                </li>
                @*<li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="fas fa-filter"></i> Gereksiz
                        <span class="badge bg-warning float-right">65</span>
                    </a>
                </li>*@
                <li class="nav-item">
                    <a href="#" class="nav-link">
                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>